@model UpdateCommentDto
@{
    ViewData["Title"] = "UpdateComment";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Ürün Yorumları Güncelleme Sayfası</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <form method="post">
                <input type="hidden" asp-for="UserCommentId" />
                <input type="hidden" asp-for="ProductId" />
                <label>Kullanıcı Adı Soyadı</label>
                <input type="text" class="form-control" asp-for="FullName" />
                <br />
                <label>Kullanıcı Resmi</label>
                <input type="text" class="form-control" asp-for="ImageUrl" />
                <br />
                <label>Email</label>
                <input type="text" class="form-control" asp-for="Email" />
                <br />
                <label>Puan</label>
                <input type="number" class="form-control" asp-for="Rating" />
                <br />
                <label>Tarih</label>
                <input type="date" class="form-control" asp-for="CreatedDate" />
                <br />
                <label>Yorum</label>
                <textarea asp-for="CommentDetail" class="form-control" rows="3"></textarea>
                <br />
                <button class="btn btn-primary">Güncelle</button>
            </form>
        </div>
    </div>
</div>