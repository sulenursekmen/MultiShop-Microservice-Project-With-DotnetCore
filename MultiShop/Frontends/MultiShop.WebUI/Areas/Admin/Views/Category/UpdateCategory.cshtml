@model UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Kategori Güncelleme Sayfası</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <form method="post">
                <input type="hidden"  class="form-control" asp-for="CategoryId" />
                <label>Kategori Adı</label>
                <input type="text" class="form-control" asp-for="CategoryName" />
                <br />
                <label>Kategori Resmi</label>
                <input type="text" class="form-control" asp-for="ImageUrl" />
                <br />
                <button class="btn btn-primary">Güncelle</button>
            </form>
        </div>
    </div>
</div>