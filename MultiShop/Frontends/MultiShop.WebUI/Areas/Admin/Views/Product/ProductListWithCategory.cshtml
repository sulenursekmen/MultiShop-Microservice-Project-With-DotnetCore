@model List<ResultProductWithCategoryDto>
@{
    ViewData["Title"] = "ProductListWithCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}


<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">@ViewBag.v3</h6>
        <a href="/Admin/Product/CreateProduct" class="btn btn-success"><i class=" fas fa-plus"></i>  Ekle</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">

            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Ürün Adı</th>
                        <th>Ürün Fiyatı</th>
                        <th>Ürün Görseli</th>
                        <th>Kategori Adı</th>
                        <th>Açıklama</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                        <th>Ürün Görselleri</th>
                        <th>Ürün Açıklaması</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>#</th>
                        <th>Ürün Adı</th>
                        <th>Ürün Fiyatı</th>
                        <th>Ürün Görseli</th>
                        <th>Kategori Adı</th>
                        <th>Açıklama</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                        <th>Ürün Görselleri</th>
                        <th>Ürün Açıklaması</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td scope="row">@count</td>
                            <td>@item.ProductName</td>
                            <td>@item.ProductPrice</td>
                            <td><img src="@item.ProductImageUrl" width="50px" height="auto"/></td>
                            <td>@item.CategoryName</td>
                            <td>@item.ProductDescription</td>
                            <td><a href="/Admin/Product/DeleteProduct/@item.ProductId" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a></td>
                            <td><a href="/Admin/Product/UpdateProduct/@item.ProductId" class="btn btn-warning"><i class="fas fa-edit"></i></a></td>
                            <td><a href="/Admin/ProductImage/ProductImageDetail/@item.ProductId" class="btn btn-primary"><i class="fas fa-file-image"></i></a></td>
                            <td><a href="/Admin/ProductDetail/AddOrUpdateProductDetail/@item.ProductId" class="btn btn-success"><i class="fa fa-info-circle" aria-hidden="true"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>