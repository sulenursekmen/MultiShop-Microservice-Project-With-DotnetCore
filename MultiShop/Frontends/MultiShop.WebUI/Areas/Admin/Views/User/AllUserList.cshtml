@model List<ResultUserDto>
@{
    ViewData["Title"] = "AllUserList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">@ViewBag.v3</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Adı Soyadı</th>
                        <th>Kullanıcı Adı</th>
                        <th>E-posta</th>
                        <th>Adres Detayları</th>
                       @*  <th>Sil</th> *@
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>#</th>
                        <th>Adı Soyadı</th>
                        <th>Kullanıcı Adı</th>
                        <th>E-posta</th>
                        <th>Adres Detayları</th>
                       @*  <th>Sil</th> *@
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td scope="row">@count</td>
                            <td>@item.Name @item.Surname</td>
                            <td>@item.UserName</td>
                            <td>@item.Email</td>
                            <td><a href="/Admin/User/UserAddressInfo/@item.Id" class="btn btn-outline-warning">Adres Detayı</a></td>
                           @*  <td><a href="/Admin/User/DeleteUser/@item.UserId" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a></td> *@
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
