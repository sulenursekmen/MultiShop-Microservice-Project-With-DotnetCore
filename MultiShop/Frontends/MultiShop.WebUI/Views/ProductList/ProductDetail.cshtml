@{
    ViewData["Title"] = "ProductDetail";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}

<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="#">Ana Sayfa</a>
                <a class="breadcrumb-item text-dark" href="#">Ürün Listesi</a>
                <span class="breadcrumb-item active">Ürün Detayları</span>
            </nav>
        </div>
    </div>
</div>
<div class="container-fluid pb-5">
    <div class="row px-xl-5">
        @await Component.InvokeAsync("_ImageSliderProductDetailComponentPartial", new { id = ViewBag.productDetailId })
        @await Component.InvokeAsync("_ProductInfoProductDetailComponentPartial", new { id = ViewBag.productDetailId })
    </div>
    <div class="row px-xl-5">
        <div class="col">
            <div class="bg-light p-30">
                <div class="nav nav-tabs mb-4">
                    <a class="nav-item nav-link text-dark active" data-toggle="tab" href="#tab-pane-1">Açıklama</a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-2">Bilgi</a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-3">Yorumlar (1)</a>
                </div>
                <div class="tab-content">
                    @await Component.InvokeAsync("_DescriptionProductDetailComponentPartial", new { id = ViewBag.productDetailId })
                    @await Component.InvokeAsync("_AdditionalInfoProductDetailComponentPartial", new { id = ViewBag.productDetailId })
                    @await Component.InvokeAsync("_ReviewProductDetailComponentPartial", new { id = ViewBag.productDetailId, pid = ViewBag.pid })
                </div>
            </div>
        </div>
    </div>
</div>