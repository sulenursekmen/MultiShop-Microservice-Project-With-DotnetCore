@model List<BasketItemDto>

<div class="bg-light p-30 mb-5">
    <div class="border-bottom">
        <h6 class="mb-3">Sepetimdeki Ürün Listesi</h6>
        @foreach (var item in Model)
        {
            <div class="d-flex justify-content-between">
                <p>@item.ProductName</p>
                <p>@item.Quantity x @item.Price.ToString("C2")</p>
            </div>
        }
    </div>
    <div class="border-bottom pt-3 pb-2">
        <div class="d-flex justify-content-between mb-3">
            <h6>Sepet Tutarı</h6>
            <h6>₺</h6>
        </div>
        <div class="d-flex justify-content-between">
            <h6 class="font-weight-medium">Kargo Fiyatı</h6>
            <h6 class="font-weight-medium">₺40</h6>
        </div>
    </div>
    <div class="pt-2">
        <div class="d-flex justify-content-between mt-2">
            <h5>Sipariş Tutarı</h5>
            <h5>₺160</h5>
        </div>
    </div>
</div>