@model UpdateProductDetailDto

<div class="tab-pane fade show active" id="tab-pane-1">
    <h4 class="mb-3">Ürün Açıklaması</h4>
    @if (Model == null)
    {
        <p>Ürün açıklaması mevcut değildir.</p>
    }
    else
    {
        <p>@(!string.IsNullOrEmpty(Model.ProductDescription) ? Model.ProductDescription : "Ürün açıklaması mevcut değildir.")</p>
    }
</div>
