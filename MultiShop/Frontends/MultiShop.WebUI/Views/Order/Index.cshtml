@model CreateAddressDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="#">Anasayfa</a>
                <a class="breadcrumb-item text-dark" href="#">Sipariş</a>
                <span class="breadcrumb-item active">Checkout</span>
            </nav>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row px-xl-5">
        @*     @await Component.InvokeAsync("_OrderDetailComponentPartial") *@
      

            <div class="col-lg-6">  
                <form method="post">
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Sipariş Teslimat ve Fatura Adresiniz</span></h5>
                <div class="bg-light p-30 mb-5">
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label>Adı</label>
                            <input class="form-control" type="text" placeholder="John" asp-for="Name">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Soyadı</label>
                            <input class="form-control" type="text" placeholder="Doe" asp-for="Surname">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>E-mail</label>
                            <input class="form-control" type="text" placeholder="example@email.com" asp-for="Email">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Telefon</label>
                            <input class="form-control" type="text" placeholder="+123 456 789" asp-for="Phone">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Mahalle/Sokak</label>
                            <input class="form-control" type="text" asp-for="AddressLine1">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Apartman/Apartman No</label>
                            <input class="form-control" type="text" asp-for="AddressLine2">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Ülke</label>
                            <input class="form-control" type="text" asp-for="Country">
                        </div> 
                        <div class="col-md-6 form-group">
                            <label>Şehir</label>
                            <input class="form-control" type="text" asp-for="City">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>İlçe</label>
                            <input class="form-control" type="text" asp-for="District">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Posta Kodu</label>
                            <input class="form-control" type="text" placeholder="123" asp-for="ZipCode">
                        </div>
                        <div class="col-md-12 form-group">
                            <label>Açıklama</label>
                            <textarea class="form-control" rows="3" asp-for="Description"></textarea>
                        </div>
                        <button type="submit" class="btn btn-block btn-primary font-weight-bold py-3">Kaydet</button>
                    </div>

                </div>
                </form>
            </div>

            <div class="col-lg-6">
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Sipariş Özeti</span></h5>
                @await Component.InvokeAsync("_OrderSummaryComponentPartial")
                @*   @await Component.InvokeAsync("_PaymentMethodComponentPartial") *@

                @*_PaymentMethodComponentPartial start *@
                <div class="mb-5">
                    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Ödeme Yöntemini Seçiniz</span></h5>
                    <div class="bg-light p-30">
                        <div class="form-group">
                            <div class="custom-control custom-radio">
                                <input type="radio" class="custom-control-input" name="payment" id="paypal">
                                <label class="custom-control-label" for="paypal">Paypal</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="custom-control custom-radio">
                                <input type="radio" class="custom-control-input" name="payment" id="directcheck">
                                <label class="custom-control-label" for="directcheck">Direct Check</label>
                            </div>
                        </div>
                        <div class="form-group mb-4">
                            <div class="custom-control custom-radio">
                                <input type="radio" class="custom-control-input" name="payment" id="banktransfer">
                                <label class="custom-control-label" for="banktransfer">Bank Transfer</label>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-block btn-primary font-weight-bold py-3">Ödeme Adımına Geç</button>
                    </div>
                </div>
                @*_PaymentMethodComponentPartial end *@
            </div>
    </div>
</div>


